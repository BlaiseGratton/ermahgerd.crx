{
  "name": "ERMAHGERD!",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Transforms page content into ERMAHGERD!-ed text",
  "icons": {
    "128": "ermahgerd_128.png"
  },
  "permissions": [
    "activeTab",
    "*://*/*",
    "http://127.0.0.1:5000/"
  ],
  "background": {
    "scripts": [
      "jquery-3.2.1.slim.min.js",
      "handleClick.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "ERMAHGERD!"
  }
}
